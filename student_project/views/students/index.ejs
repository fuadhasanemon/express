<style>
  .student_image {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
  }

  .d-flex {
    flex-wrap: wrap;
  }

  .student-card {
    width: 32%;
  }
</style>

<div class="container">
  <div class="row">
    <div class="content">
      <h1 class="text-center m-5">Get all students</h1>
      <a href="/student/create" class="btn btn-md btn-primary">Add student</a>
      <a href="/student/unverified" class="btn btn-md btn-danger"
        >Unverified student</a
      >
      <br />
      <br />
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 d-flex gap-3">
      <% students.reverse().forEach((student,index) => { %>

      <div class="col-md-4 student-card">
        <div class="card shadow-sm p-3 text-center ga">
          <div class="image_wapper">
            <% if (student.photo == "avatar.jpg") { %>
            <img
              class="student_image"
              src="/images/<%= student.photo %>"
              alt=""
            />
            <% } else { %>
            <img
              class="student_image"
              src="/images/students/<%= student.photo %>"
              alt=""
            />
            <% } %>
          </div>
          <div class="student_imfo pb-3">
            <h3 class="pt-5"><%= student.name %></h3>
            <h3><%= student.email %></h3>
            <h3><%= student.phone %></h3>
            <h3><%= student.location %></h3>
          </div>
          <a class="btn btn-info" href="/student/<%= student.id  %>"> View </a>
        </div>
      </div>

      <% }) %>
    </div>
  </div>
</div>
