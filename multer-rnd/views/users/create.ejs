<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 mt-5">
      <a href="/student" class="btn btn-sm btn-info mb-3">Back</a>
      <h1>Create student</h1>

      <div class="card shadow">
        <div class="card-body">
          <form
            action="/student/create"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="" class="mb-2">Name</label>
              <input type="text" name="name" class="form-control" />
            </div>

            <div class="mb-3">
              <label for="" class="mb-2">Email</label>
              <input type="text" name="email" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="" class="mb-2">Phone</label>
              <input type="text" name="phone" class="form-control" />
            </div>

            <div class="mb-3">
              <label for="" class="mb-2">Address</label>
              <select name="location" id="" class="form-control">
                <option value="">Select your location</option>
                <option value="Badda">Badda</option>
                <option value="Uttora">Uttora</option>
                <option value="Boshundhora">Boshundhora</option>
                <option value="Mirpur">Mirpur</option>
              </select>
            </div>
            <div class="mb-3">
              <!-- Image preview -->
              <label for="student-photo-upload mb-2">
                <img width="200" src="" class="studentImagePreview" alt="" />
              </label>
              <!-- Image preview -->
              <label for="" class="mb-2">Photo</label>
              <input
                type="file"
                name="student_photo"
                class="form-control"
                id="student_photo_upload"
              />
            </div>
            <div class="mb-3">
              <button type="submit" class="btn btn-sm btn-primary">
                Create student
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
