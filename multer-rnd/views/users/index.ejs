<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 mt-5">
      <h1>Add new user</h1>

      <div class="card shadow">
        <div class="card-body">
          <form action="" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="" class="mb-2">Name</label>
              <input type="text" name="name" class="form-control" />
            </div>

            <div class="mb-3">
              <label for="" class="mb-2">Email</label>
              <input type="text" name="email" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="" class="mb-2">Phone</label>
              <input type="text" name="phone" class="form-control" />
            </div>

            <div class="mb-3">
              <!-- Image preview -->
              <label for="student-photo-upload mb-2">
                <img width="200" src="" class="studentImagePreview" alt="" />
              </label>
              <!-- Image preview -->
              <label for="" class="mb-2">Photo</label>
              <input
                type="file"
                name="user_photo"
                class="form-control"
                id="student_photo_upload"
                multiple
              />

              <label for="" class="my-2">CV</label>
              <input
                type="file"
                name="user_cv"
                class="form-control"
                id="student_photo_upload"
                multiple
              />
            </div>
            <div class="mb-3">
              <button type="submit" class="btn btn-sm btn-primary">
                Create User
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
