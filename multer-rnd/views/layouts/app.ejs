<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <%- body %>

    <!-- Latest compiled JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.4/datatables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/script.js"></script>

    <script>
      $(document).ready(function () {
        $("#student-Data-Table").DataTable();
      });

      // Student photo preview
      const studentImage = document.querySelector("#student_photo_upload");
      const studentImagePreview = document.querySelector(
        ".studentImagePreview"
      );
      if (studentImage) {
        studentImage.onchange = (e) => {
          const studentImageUrl = URL.createObjectURL(e.target.files[0]);
          // console.log(studentImageUrl);
          studentImagePreview.setAttribute("src", studentImageUrl);
        };
      }

      // Delete btn manage

      const delete_btn = document.querySelectorAll(".delete-button");

      delete_btn.forEach((item) => {
        item.onclick = (e) => {
          const conf = confirm("Are you sure ?");

          if (conf) {
            return true;
          } else {
            return false;
          }
        };
      });
    </script>
  </body>
</html>
